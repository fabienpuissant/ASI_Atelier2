if(sessionStorage.getItem("Name") == null){
	window.location.href = "/login.html";
}



$(document).ready(function() {
	
	//Header banner
	var type = "";
	var SellMarketAlreadyDisplayed = false;
	var SellBuyAlreadyDisplayed = false;
	
	$('#homeIcon').click(function(){
		$("#home").show();
		$("#sell").hide();
	});
	
	$('#sellIcon').click(function(){
		type = "Sell";
		console.log(SellMarketAlreadyDisplayed);
		displaySellMarket();
	});
	
	$('#buyIcon').click(function(){
		type = "Buy";
		displayBuyMarket();
	});
	
    
	var json = JSON.parse(sessionStorage.getItem("Name"));
	
	$("#userNameId").text(json.surname);
	$('#money').text(json.money + "$");
	
	//Affichage du sell market
	$("#sellMarket").click(function(){
		displaySellMarket();
	});
	
	$("#buyMarket").click(function(){
		displayBuyMarket();
	});
	
	
	function fillImage(imgUrl, description, name, attack, defence, price){
		$('#cardFamilyImgId')[0].src=imgUrl;
	    $('#cardDescriptionId')[0].innerText=description;
	    $('#cardNameId')[0].innerText=name;
	    $('#cardAttack')[0].innerText=attack;
	    $('#cardDefence')[0].innerText=defence;
	    $('#cardPriceId')[0].innerText=price+" $";
	}
	
	function addImage(imgUrl, description, name, attack, defence, price){
		$("#imgrow").append("<tr class = 'cardchild'><td>" +
                "<img  class='ui avatar image' src='"+ imgUrl +"'> <span class = 'Name'>"+ name +" </span>" +
            "</td>" +
            "<td class='Attack'>"+ attack +"</td>"+
            "<td class='Defence'>"+ defence +"</td>"+
            "<td class='Price'>"+ price +"</td>"+
            "<td class='Description' style='display:none'>" + description + "</td>" + 
            "<td>"+
                "<div class='ui vertical animated button' tabindex='0'>"+
                    "<div class='hidden content'>"+ type +"</div>"+
                    "<div class='visible content'>"+
                        "<i class='shop icon'></i>"+
                    "</div>"+
                "</div>"+
            "</td></tr>");
	}
	
	function displayCards(cards){
		var i;
		for(i = 0; i < cards.length; i++){
			
			  $.ajax({
				  url:"/CardService/" + cards[i],
				  type:"GET",
				  success: function( data ){
					  var json = JSON.parse(data);
					  fillImage(json.imgUrl, json.name, json.description, json.attack, json.defence, json.price);
					  addImage(json.imgUrl, json.name, json.description, json.attack, json.defence, json.price)
				  }
			  });
			  
		  }
	}
	
	
		
	function displaySellMarket(){
		if(SellMarketAlreadyDisplayed){
			$("#home").hide();
			$("#sell").show();
			
			return
		}
		
		SellMarketAlreadyDisplayed = true;
		
		type = "Sell";
		$('#marketType')[0].innerText=type;
		
		$("#home").hide();
		$("#sell").show();
		
		//First AJAX call to get the cards of the user
		$.ajax({
			  url:"/UserService/user/cards/" + json.id,
			  type:"GET",
			  success: function( data ){
				  var cards = data.split("/");
				  console.log(cards);
				  displayCards(cards);
				  
				  $("#imgrow").on("click", ".cardchild" ,function(){
					  
					var imgUrl = $(this).find(".image").attr('src');
					var name = $(this).find(".Name").text();
					var description = $(this).find(".Description").text();
					var attack = $(this).find(".Attack").text();
					var defence = $(this).find(".Defence").text();
					var price = $(this).find(".Price").text();
				    fillImage(imgUrl, name, description, attack, defence, price);
				    
				});
			  }
			  
		});
		 
	}
	
	
	
	function displayBuyMarket(){

		if(SellBuyAlreadyDisplayed){
			$("#home").hide();
			$("#buy").show();
			
			return
		}
		
		SellMarketAlreadyDisplayed = true;
		
		
		$.ajax({
			  url:"UserService/user/BuyCards/" + json.id,
			  type:"GET",
			  success: function( data ){
				  cards = data.split('/');
				  displayCards(cards);
			  }
		  });
	}
	
	
});