package io.javabrains.cardmarket.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import io.javabrains.cardmarket.models.CardEntity;

@Service
public class CardService {
	
	@Autowired
	private CardRepository cardRepository;
	
	public CardEntity getUserByName(String Name) {
		return cardRepository.findByName(Name);
	}
	
	public void addUser(CardEntity user) {
		cardRepository.save(user);
	}
	
	public void updateUser(CardEntity user) {
		cardRepository.save(user);
	}
	
	public void deleteUser(String id) {
		cardRepository.delete(cardRepository.findById(id));
	}
	

}