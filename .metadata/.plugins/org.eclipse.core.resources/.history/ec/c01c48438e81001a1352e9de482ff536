package io.javabrains.cardmarket.controllers;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import io.javabrains.cardmarket.models.CardEntity;
import io.javabrains.cardmarket.models.UserEntity;


@RestController
public class CardRestController {
	
	@Autowired
	private CardService cardService;
	
	@GetMapping("CardService/card/{id}")
	public Optional<CardEntity> getcard(@PathVariable String id) {
		return cardService.getCardById(id);
	}
	
	@GetMapping("init")
	public void getcard() {
		List<CardEntity> cardlist = this.generateCard();
		for (int i = 0; i < cardlist.size(); i++) {
			CardEntity card = cardlist.get(i);
			cardService.addCard(card);
		}
		
	}
	
	@PostMapping(value="CardService/addCard", consumes=MediaType.APPLICATION_JSON_VALUE)
	public void addCard(@RequestBody CardEntity card) {
		cardService.addCard(card);
	}

	private List<CardEntity> generateCard(){
		List<CardEntity> cardlist = new ArrayList<CardEntity>();
		CardEntity card;
		card = new CardEntity("Tayloy", "url", "Description", 15, 20);
		cardlist.add(card);
		card = new CardEntity("Supej", "url", "Description", 15, 20);
		cardlist.add(card);
		card = new CardEntity("Juye", "url", "Description", 15, 20);
		cardlist.add(card);
		card = new CardEntity("Protec", "url", "Description", 15, 20);
		cardlist.add(card);
		card = new CardEntity("Crewis", "url", "Description", 15, 20);
		cardlist.add(card);
		return cardlist;
	}

}

